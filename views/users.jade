doctype 5
html(lang="en")
head
  link(rel='stylesheet', href='/static/css/site.css', type='text/css')
  title 'Node.JS User Registration'
  script(type='text/javascript', src='/socket.io/socket.io.js')
  script(type='text/javascript', src='/static/js/client.js')
  script(type='text/javascript', src='/static/js/jquery.js')
body
  h1 Node.JS User Registrationkbe
  h2 Users list
  div
    #{usersWithUserActivations.length} 
    each userWithUserActivation in usersWithUserActivations
      li 
        div
          p #{userWithUserActivation.user.firstname} #{userWithUserActivation.user.lastname.toUpperCase()} Activation Key : #{userWithUserActivation.userActivation.activationKey} &nbsp;
            - if (userWithUserActivation.user.active)
              a(href='/user/desactivateUser/#{userWithUserActivation.userActivation.activationKey}') Desactivate
            - else 
              a(href='/user/activate/#{userWithUserActivation.userActivation.activationKey}') Activate

